<%= form_with(model: @post, local: true ,url: choose_new_or_edit ) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h3><%= @post.errors.count %>件のエラーがあります。</h3>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="post_content">
    <%= form.label :content, 'いまどうしてる？'  %>
    <%= form.text_field :content, class: "input" %>
  </div>
  <%= form.submit 'ツイート', class: "btn" %>
<% end %>
